extends ../components/base/layout

block variables
  - const title = "Go-Tver.ru." //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = "index.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks
  - const authorization = false

block main
  main

    +navigator-location()
    +popular-touring()
    +popular-articles()
    +tag-search()

block modals
  +modal("modal--tell-about")(data-modal="tell-about")
    +modal-tell-about()
  +modal("modal--login-to-account")(data-modal="login-to-account")
    +modal-login-to-account()
  +modal("modal--user-registration")(data-modal="user-registration")
    +modal-user-registration()
