mixin card-object-features()
  .card-object-features
    .card-object-features__top-wrapper
      .card-object-features__map
        .card-object-features__map-picture
          +picture("content", "location-object", "png", 64, 64, "иконка карты", false)
        .card-object-features__map-info
          p.card-object-features__map-text Садовническая наб., д. 7, г. Москва
          a(href="#").card-object-features__link Посмотреть на карте
      .card-object-features__items
        .card-object-features__item
          +icon("location", 24, 24)
          span 1,3 км от центра
        .card-object-features__item
          +icon("eat", 24, 24)
          span 50 м Ресторан Touch Chef’s Place & Bar
        .card-object-features__item
          +icon("mic", 24, 24)
          span 300 м Сергей Старостин. Концерт с песочной анимацией
      a(href="#").card-object-features__link Больше интересного рядом
    .card-object-features__bottom-wrapper
      .card-object-features__items-more
        .card-object-features__item-more
          +icon("parking", 20, 20)
          span Охраняемая парковка
        .card-object-features__item-more
          +icon("wi-fi", 20, 20)
          span Wi-Fi
        .card-object-features__item-more
          +icon("transfer", 20, 20)
          span Трансфер
        .card-object-features__item-more
          +icon("animals", 20, 20)
          span Можно с животными
        .card-object-features__item-more
          +icon("baggage", 20, 20)
          span Поднос багажа
        .card-object-features__item-more
          +icon("servise", 20, 20)
          span Обслуживание в номерах
      .card-object-features__buttons
        +main-btn({
          href: "#",
          icon: "arrow-black",
          text: "Забронировать"
        })
        +action-item({
          icon: "heart",
        })(data-favorite="article")
        +action-item({
          icon: "share",
        })(data-open-modal="tell-about")
